{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-restricted-globals": [
            "error",
            "localStorage"
        ],
        "no-restricted-properties": [
            "error",
            {
                "object": "window",
                "property": "localStorage",
                "message": "Est√° prohibido usar localStorage. Usa API/DB."
            }
        ]
    }
}